<div class="jumbotron jumbotron-fluid text-center">
  <h3 class="display-7">NBC BAY AREA</h3>
  <p>Get the latest from NBC Bay Area</p>
</div>

<div class="container">
  <h3>Saved articles</h3>
  {{#each articles}}
    <div class="card bg-light mb-3">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <a href="{{link}}" class="card-link" target="_blank">View article on TechCrunch</a>
        <p class="card-text">{{intro}}...</p>
        <a data-articleId= {{_id}} class="btn btn-primary unsave-btn">Remove from saved</a>
        <a data-articleId= {{_id}} class="btn btn-primary note-modal-btn" data-toggle="modal">Add note</a>
      </div>
              <ul class="notes-list">
        </ul>
    </div>
  {{/each}}
</div>


<div id="add-note-modal" class="modal" tabindex="-1" role="dialog" data-articleId="">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="note-modal-title" class="modal-title"></h5>
      </div>
      <div class="modal-body container">
        <ul class="notes-list">
        </ul>
        <div class="form-group">
          <label for="note-area">New note</label>
          <textarea name="new-note-area" class="form-control" id="note-body" rows="2" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary note-save-btn" data-dismiss="modal">Save</button>

        </div>
      </div>
    </div>
  </div>